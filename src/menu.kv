<Menu>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.8
        Rectangle:
            size: self.size
    Label:
        font_name: 'Sackers-Gothic-Std-Light.ttf'
        text: root.parent.menu_title
        pos_hint: {'center_x:': 0.5,'center_y': 0.6} 
        font_size: self.width*0.07          
    Button:
        font_name: 'Eurostile.ttf'
        text: root.parent.menu_button_title
        pos_hint: {"center_x": 0.5,'center_y': .4}
        size_hint: 0.2, 0.1        
        on_press: root.parent.on_menu_button()
        font_size: self.width*0.12
        background_normal: ''
        background_color: 1, .3, .4
    Button:
        font_name: 'Eurostile.ttf'
        text: root.parent.menu_modes_title
        pos_hint: {"center_x": 0.5,'center_y': .3}
        size_hint: 0.18, 0.08        
        on_press: root.parent.on_menu_modes()
        font_size: self.width*0.1
        background_normal: ''
        background_color: 1, .3, .4

        