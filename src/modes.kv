#:import dp kivy.metrics.dp
<Modes>:
    opacity: 0
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: dp(40)
        spacing: dp(30)
        Label:
            font_name: 'Sackers-Gothic-Std-Light.ttf'
            text: 'M   O   D   E   S'
            font_size: root.width * 0.06
            halign: 'center'
            valign: 'middle'
            text_size: self.size
        BoxLayout:
            size_hint_y: None
            height: root.height * 0.12
            spacing: dp(15)
            Button:
                id: toggle_button_1
                font_name: 'Eurostile.ttf'
                text: 'T  U  R  T  L  E'
                font_size: root.width * 0.035
                background_normal: ''
                background_color: 1,.3,.4,1
            Button:
                id: toggle_button_2
                font_name: 'Eurostile.ttf'
                text: 'S  O  N  I  C'
                font_size: root.width * 0.035
                background_normal: ''
                background_color: 1,.3,.4,1
        BoxLayout:
            size_hint_y: None
            height: root.height * 0.12
            spacing: dp(15)
            Button:
                id: tight_button
                font_name: 'Eurostile.ttf'
                text: 'T  I  G  H  T'
                font_size: root.width * 0.035
                background_normal: ''
                background_color: 1,.3,.4,1
            Button:
                id: wide_button
                font_name: 'Eurostile.ttf'
                text: 'W  I  D  E'
                font_size: root.width * 0.035
                background_normal: ''
                background_color: 1,.3,.4,1
        Button:
            id: return_button
            size_hint_y: None
            height: root.height * 0.12
            text: 'RETURN TO MENU'
            font_name: 'Eurostile.ttf'
            font_size: root.width * 0.04
            background_normal: ''
            background_color: 1,.3,.4,1
        Widget:
