<Modes>:
    opacity: 0
    RelativeLayout:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            spacing: self.height * 0.1
            padding: self.height * 0.03
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 50
                spacing: 0
                Widget:
                    size_hint_y: 1
                Label:
                    font_name: 'Sackers-Gothic-Std-Light.ttf'
                    text: 'M O D E S'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.9}
                    font_size: self.width * 0.07
            # Mode rows
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 50
                spacing: 0
                Widget:
                    size_hint_x: 1
                Label:
                    font_name: 'Sackers-Gothic-Std-Light.ttf'
                    text: 'Mode 1:'
                    font_size: self.width * 0.1
                    size_hint_x: 0.8
                Button:
                    id: toggle_button_1
                    font_name: 'Eurostile.ttf'
                    text: 'OFF'
                    font_size: self.width * 0.3
                    background_normal: ''
                    background_color: 1, .3, .4
                    size_hint_x: 0.3
                Widget:
                    size_hint_x: 1
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 50
                spacing: 0
                Widget:
                    size_hint_x: 1
